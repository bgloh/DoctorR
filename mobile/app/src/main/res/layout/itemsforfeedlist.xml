<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_feed_list_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFB2CCFF"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/tv_item_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_feed_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:text="어떤 : "
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_feed_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수유 시간 : "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_item_feed_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"

                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_feed_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수유 끝 : "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_item_feed_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"

                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_feed_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 수유 시간 : "
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tv_item_feed_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/tv_item_feed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
