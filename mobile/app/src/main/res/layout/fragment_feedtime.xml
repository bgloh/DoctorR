        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/feed_left"
            android:text="좌"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/feed_right"
            android:text="우"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/feed_powder"
            android:text="분유"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



